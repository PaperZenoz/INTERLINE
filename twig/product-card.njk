        </div>
    </div>

    {% set  _ = 'general-services' %}
    <div class="{{ _ }} section">
        <div class="container-lg">
            <div class="{{ _ }}__wrap">
                <h2 class="h2 h2--underline h2--underline-white">Сервис</h2>
                <div class="{{ _ }}__list">
                    {% set  list = [
                        'Быстрый',
                        'Профессиональный',
                        'Гарантийный сервис'] %}

                    {% for item in list %}
