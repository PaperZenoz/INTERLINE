                    {% set  _ = 'product-card-slider' %}
                    <div class="{{ _ }} custom-slick-arrow custom-slick-arrow--2">
                        {% for i in range(1, 3) %}
                            <div class="{{ _ }}__item img">
                                <img src="images/{{ _ }}/{{ loop.index }}.jpg" alt=""/>
                            </div>
                        {% endfor %}
                        {% for i in range(1, 3) %}
